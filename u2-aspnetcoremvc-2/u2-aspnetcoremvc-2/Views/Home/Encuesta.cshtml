@model ViewModelAlumnoEncuesta
<!--tag helper-->
<h1>   Encuesta </h1>

<!-- se configura a cual endpoint se mandan estos valores-->
<form asp-action="Encuesta" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input name="Nombre" />
    </div>


    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input name="Email" />

    </div>

    <div class="form-group">
        <label asp-for="Carrera">Carrera</label>
        <input name="Carrera" />

    </div>

    <div class="form-group">
        <label>Puede regresar a clases presenciales?</label>
        <select asp-for="Respuesta">
            <option value="">Elige una opcion</option>
            <option value="true">Si</option>
            <option value="false">No</option>
        </select>

    </div>


    <input type="submit" name="Enviar" value="Enviar" />

</form>

